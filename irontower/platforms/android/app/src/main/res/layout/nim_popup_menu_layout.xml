<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tra_40_black"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_cancel"
        android:layout_marginBottom="10dp"
        android:background="@drawable/nim_popup_menu_item_black_selector">

        <ListView
            android:id="@+id/popmenu_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#d9d9d9"
            android:dividerHeight="1dp"
            android:scrollbars="none" />
    </LinearLayout>


    <TextView

        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/popup_menu_icon"
        android:background="@drawable/nim_popup_menu_item_black_selector"
        android:ellipsize="end"
        android:gravity="center"
        android:padding="10dp"
        android:singleLine="true"
        android:text="取消"
        android:textColor="@color/actionsheet_blue"
        android:textSize="17sp" />


</RelativeLayout>